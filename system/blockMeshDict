    	(0 					  #calc "(10)*$d"  #calc "(-1)*6*$d")  

//outlet plane:

        (0 					  0   	           #calc "(1)*6*$d")
        (#calc "(1)*29*$d"    0  			   #calc "(1)*6*$d")
        (#calc "(1)*29*$d"    #calc "(10)*$d"  #calc "(1)*6*$d")
        (0 					  #calc "(10)*$d"  #calc "(1)*6*$d")
);


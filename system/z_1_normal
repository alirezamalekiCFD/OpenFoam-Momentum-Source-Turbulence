z_1_normal
{
    type            surfaces;
    libs            ("libsampling.so");
   // writeControl    writeTime;

    writeControl  runTime;
    writeInterval  0.001;


    surfaceFormat   vtk;
	//surfaceFormat   stl;
    fields          (p U vorticity);

    interpolationScheme cellPoint;

    surfaces
    (
        z_1_normal
        {
            type            cuttingPlane;
            planeType       pointAndNormal;
            pointAndNormalDict
            {
                point   (0 0 0);
                normal  (0 0 1);
            }
            interpolate     true;
        }
		
    );
	
		formatOptions
	{
    vtk
    {
        legacy true;
        // format ascii;
    } 
}

}


